#!/bin/bash
set -e
cd `dirname $0`/..
mkdir -p ~/.conf
echo "[bin/prepare] ENV=$ENV"
# mongodb connection config
if [ "$ENV" = 'prod' ]; then
  wget -t 3 -T 5 ftp://mfs.jd.com/mnt/mfs/ares/prod/dbp/api-server/mongodb_dbp_prod_rw.json -O ~/.conf/mongodb_dbp_prod_rw.js
elif [ "$ENV" = 'stage' ]; then
  wget -t 3 -T 5 ftp://mfs.jd.com/mnt/mfs/ares/prod/dbp/api-server/mongodb_dbp_stage_rw.json -O ~/.conf/mongodb_dbp_stage_rw.js
elif [ "$ENV" = 'ci' ]; then
  wget -t 3 -T 5 ftp://mfs.jd.com/mnt/mfs/ares/prod/dbp/api-server/mongodb_dbp_ci_rw.json -O ~/.conf/mongodb_dbp_ci_rw.js
fi